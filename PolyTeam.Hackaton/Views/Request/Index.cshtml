@model PolyTeam.Hackaton.Models.SocialRequestModel
@using PolyTeam.Hackaton.Controllers;
@using (Html.BeginForm("Submit","Request")) {
    <div id="panel">
        <fieldset>
            <legend>Інформація користувача</legend>

            <div class="editor-label field">
                @Html.LabelFor(m => m.Street)
                @Html.TextBoxFor(m => m.Street)
            </div>
            <div class="editor-field field">
                @Html.LabelFor(m => m.House)
                @Html.TextBoxFor(m => m.House)
            </div>
            <div class="editor-field field">
                @Html.LabelFor(m => m.Flat)
                @Html.TextBoxFor(m => m.Flat)
            </div>
            <div class="editor-field field">
                @Html.DropDownListFor(model => model.ProblemId, Model.ProblemList, "Select")
            </div>
            <div class='SubmitButton'>
                <input type="submit" value="Додати" />
            </div>
        </fieldset>
    </div>
}